<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:layout_margin="@dimen/margin_for_item_image">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradient">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/item_image_size"
                android:layout_height="@dimen/item_image_size"
                android:layout_margin="@dimen/margin_for_item_image"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/item_name"
                android:layout_width="@dimen/width_for_item_name"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_for_item_text"
                android:layout_toEndOf="@+id/item_image"
                android:textSize="@dimen/item_name_size"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_margin="@dimen/margin_for_item_text"
                android:layout_toEndOf="@+id/item_image"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_time"
                android:layout_margin="@dimen/margin_for_item_text"
                android:layout_toEndOf="@+id/item_image"
                android:textColor="@color/white"/>

            <Switch
                android:id="@+id/switch_for_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/margin_for_item_image" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>